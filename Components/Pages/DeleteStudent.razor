@using ServerBlazorDemo.Models;

<h3>Delete Student Detail</h3>


<div class="modal-dialog" role="dialog">
    <div class="modal-content">
        
        <div class="modal-body">
            <p><strong>ID:</strong>@student.Id</p>
            <p><strong>FirstName:</strong>@student.FirstName</p>
            <p><strong>LastName:</strong>@student.LastName</p>
            <p><strong>Standard:</strong>@student.Std</p>
            <p><strong>Address:</strong>@student.Address</p>
            <p><strong>City:</strong>@student.City</p>
            <p>Are you sure to want delete this record ?</p>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal" @onclick="Back">Close</button>
            <button type="button" class="btn btn-danger" @onclick="Delete">Delete</button>
        </div>
    </div>
</div>


